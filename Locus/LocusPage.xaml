    <StackLayout>
        <Label Text="Welcome to Xamarin Forms!" VerticalOptions="Center" HorizontalOptions="Center" />
        <Button Text="Click To Update Location" Clicked="Handle_Clicked" />
        <Label Text="Unknown" x:Name="CurrentLocation" />
        <maps:Map WidthRequest="320" HeightRequest="200"
            x:Name="MyMap"
            IsShowingUser="true" 
            MapType="Hybrid"
        />
    </StackLayout>
</ContentPage>